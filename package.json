		"build": "bun run --cwd packages/astro-integration build",
		"publint": "bun run --cwd packages/astro-integration publint"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"pkg-pr-new": "0.0.43"
	}
}
